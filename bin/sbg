#!/bin/bash
#
# Changes the terminal profile for Terminal.app to the one specified
# by the command line argument.

if [ $1 == "list" ]; then
    echo "Options: b, w, ssh, su"
    if [ $2 == "all" ]; then
        echo "Full option dump:"
        /usr/libexec/PlistBuddy -c "Print :Window\ Settings" ~/Library/Preferences/com.apple.Terminal.plist | 
            grep -a " = Dict {" | 
            sed -e "s/    //" | 
            sed -e "s/ = Dict {//"
    fi
    exit
else
    osascript -e "on run argv
tell application \"Terminal\" to set current settings of selected tab of front window to first settings set whose name is (item 1 of argv)
end run" $1
fi
